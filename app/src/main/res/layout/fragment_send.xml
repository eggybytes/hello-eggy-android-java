<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_title_label" />

    <EditText
        android:id="@+id/send_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/send_title_hint" />

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_details_label" />

    <Button
        android:id="@+id/send_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/send_sent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_sent_label" />

</LinearLayout>
